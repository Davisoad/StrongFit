@model StrongFit.Models.Treino

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Treino</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlunoID" class="control-label"></label>
                <select asp-for="AlunoID" class ="form-control" asp-items="ViewBag.AlunoID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hora" class="control-label"></label>
                <input asp-for="Hora" class="form-control" />
                <span asp-validation-for="Hora" class="text-danger"></span>
            </div>
           <div>
                <button style="background: #B0E0E6; color:inherit; border-radius: 6px; padding: 14px; cursor: pointer; color: #00008B; border: none; font-size: 14px;"> <a asp-action="Index" style="text-decoration:none; color:inherit">Voltar</a></button>
                <input style="background: #B0E0E6; border-radius: 6px; padding: 14px; cursor: pointer; color: #00008B; border: none; font-size: 14px;" type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
